{
  "name": "cdata-arc-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for CData Arc - enables AI assistants to manage flows, messages and application behavior",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & node --watch dist/index.js",
    "dev:stdio": "cross-env MCP_TRANSPORT_MODE=stdio npm run dev",
    "dev:http": "cross-env MCP_TRANSPORT_MODE=http npm run dev",
    "dev:both": "concurrently \"npm run dev:stdio\" \"npm run dev:http\"",
    "start": "node dist/index.js",
    "start:stdio": "cross-env MCP_TRANSPORT_MODE=stdio npm run start",
    "start:http": "cross-env MCP_TRANSPORT_MODE=http npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cdata",
    "arc",
    "integration",
    "ai",
    "assistant"
  ],
  "author": "CData Software",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}